<Window x:Class="ServerApp.View.NewMessageControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerApp.View"
        mc:Ignorable="d"
        Title="NewMessageControl" Height="100" Width="300">
		<Grid>
				<Border Padding="5" Background="LightSkyBlue">
						<Grid Margin="5">
								<Border CornerRadius="20" Background="White" Padding="5">
										<TextBlock VerticalAlignment="Center" TextWrapping="Wrap"
														Foreground="DarkBlue"
														Background="White"
												 Text="{Binding NewMessage}"/>
								</Border>
						</Grid>
				</Border>
		</Grid>
</Window>
